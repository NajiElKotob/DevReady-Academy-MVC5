@if (print == false)
{
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index") |
        @Html.ActionLink("Print", "Details", new { id = Model.Id, print = "true" })
    </p>
}
else
{
    <script>window.print();</script>
}


